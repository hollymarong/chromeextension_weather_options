{
  "manifest_version": 2,

  "name": "查看天气",
  "description": "This extension shows the current time and weather",
  "version": "1.0",
  "browser_action": {
    "default_icon": {
      "19":"icon19.png",
      "38":"icon38.png"
    },
    "default_popup": "popup.html"
  },
  "options_page": "option.html",
  "icons":{
    "16":"icon16.png"
  },
  "permissions": [
    "contextMenus",
    "notifications",
    "http://api.openweathermap.org/data/2.5/weather?q=*"
  ],
  "web_accessible_resources": [
    "icon48.png"
  ]
}